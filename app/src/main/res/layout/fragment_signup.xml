<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_highlight_background"
    tools:context=".SigninFragment">

    <TextView
        android:id="@+id/SignupTextView"
        android:layout_width="224dp"
        android:layout_height="73dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="94dp"
        android:gravity="end"
        android:text="NewsApp"
        android:textColor="@color/background"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextFirstNameSignup"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="87dp"
        android:ems="10"
        android:background="@drawable/rounded_search_bg"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignupTextView" />

    <EditText
        android:id="@+id/EditTextLastNameSignup"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="87dp"
        android:ems="10"
        android:background="@drawable/rounded_search_bg"
        android:hint="Last Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextFirstNameSignup" />

    <EditText
        android:id="@+id/EditTextUsernameSignup"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:background="@drawable/rounded_search_bg"

        android:hint="username"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextLastNameSignup" />

    <EditText
        android:id="@+id/EditTextPasswordSignup"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/rounded_search_bg"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextUsernameSignup" />

    <Button
        android:id="@+id/button"
        style="@style/CustomButtonStyle"
        android:layout_width="217dp"
        android:layout_height="55dp"

        android:layout_marginStart="97dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="97dp"
        android:text="Sign-up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignInSignup" />

    <Button
        android:id="@+id/buttonSignInSignup"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:background="@android:color/transparent"
        android:text="Sign in"
        android:textColor="@android:color/holo_blue_bright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextPasswordSignup" />

    <TextView
        android:id="@+id/textViewNotRegistered"
        android:layout_width="241dp"
        android:layout_height="31dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="26dp"
        android:text="Already have an account ?"
        android:textColor="@color/background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextPasswordSignup" />

</androidx.constraintlayout.widget.ConstraintLayout>